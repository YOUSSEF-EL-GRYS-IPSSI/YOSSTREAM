{% extends 'base.html.twig' %}

{% block title %}
	Tous les genres
{% endblock %}

{% block body %}



	{% for notification in app.flashes("success") %}

		<div class="">

			{{notification}}

		</div>

	{% endfor %}
	<section class="tableau-genre">
		<table class="table">

			<thead>

				<tr class="title-table">

					<th>Id</th>
					<th>Titre</th>
					<th>Modifier</th>
					<th>Supprimer</th>
					<th>Ajout Genre</th>

				</tr>

			</thead>

			<tbody class="tbody-movies espace">
				{% for genre in genre %}
					<tr>

						<td>{{ genre.id }}</td>

						<td>{{ genre.type }}</td>

						<td class="btn-update">
							<a href="{{ path('genre_modifier', {'id': genre.id}) }}">Modifier</a>
						</td>

						<td class="btn-delete">
							<a href="{{ path('genre_supprimer', {'id' : genre.id } ) }}" onclick="return confirm('Souhaitez-vous vraiment supprimer ce produit?')">Supprimer</a>

						</td>

						<td>
							<a class="btn-ajout-genre" href="{{ path("genre_ajouter") }}">Ajouter</a>
						</td>

					</tr>

				{% else %}

					<tr>
						<td colspan="2">Il n'y a aucun genre pour le moment</td>
					</tr>

				{% endfor %}

			</tbody>

		</table>

	</section>
{% endblock %}
