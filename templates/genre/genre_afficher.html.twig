{% extends 'base.html.twig' %}

{% block title %} Tous les genres {% endblock %}

{% block body %}

    <a class="" href="{{ path("genre_ajouter") }}">Ajouter</a>

    {% for notification in app.flashes("success") %}

    <div class="">

        {{notification}}
    
    </div>

{% endfor %}

    <table class="">

        <thead class="">

            <tr>

                <th>Id</th>
                <th>Titre</th>
                <th>Modifier</th>
                <th>Supprimer</th> 

            </tr>

        </thead>

        <tbody>
        {% for genre in genre %}
            <tr>

                <td>{{ genre.id }}</td>

                <td>{{ genre.type }}</td>

                <td>
                    <a href="{{ path('genre_modifier', {'id': genre.id}) }}">Modifier</a>
                </td>

                 <td>
                    <a href="{{ path('genre_supprimer', {'id' : genre.id } ) }}"
                    onclick="return confirm('Souhaitez-vous vraiment supprimer ce produit?')">Supprimer</a>

                </td>

            </tr>

        {% else %}

            <tr>
                <td colspan="2">Il n'y a aucun genre pour le moment</td>
            </tr>

        {% endfor %}

        </tbody>

    </table>
{% endblock %}


  

