{% extends 'base.html.twig' %}

{% block title %}Toutes les s√©ries
{% endblock %}

{% block body %}

	<section class="tableau-serie">

		<table class="table">

			<thead class="">
				<tr
					class="title-table">
					{# <th>Id</th> #}
					<th>Nom</th>
					<th>Prenom</th>
					<th>Role</th>
					<th>Email</th>

					
				</tr>
			</thead>

			<tbody class="tbody-movies">
				{%  for user in users %}
					<tr class="">


						{# <td>{{ series.id }}</td> #}
					<td class="p1">{{ user.username }}</td>
					<td class="p2">{{ user.name }}</td>
					<td class="p2">{{ user.roles ? user.roles|json_encode  }}</td>
					<td class="p2">{{ user.email }}</td>
						
					</tr>

				{% else %}

					<tr>
						<td colspan="2"></td>
					</tr>

				{% endfor %}

			</tbody>

		</table>

	</section>
{% endblock %}
