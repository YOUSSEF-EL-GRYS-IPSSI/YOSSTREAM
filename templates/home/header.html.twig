				<li>
					<a href="{{ path("app_register") }}">Inscription</a>
				</li>

				<li>
					<a href="{{ path("app_login") }}" id="connect">S'identifier</a>
				</li>
			</ul>
		</div>
	</nav>


{% endif %}

